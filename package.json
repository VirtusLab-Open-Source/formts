{
  "version": "0.1.0-alpha",
  "name": "@virtuslab/formts",
  "description": "Typescript-focused, schema-based React form library",
  "repository": "git@github.com:VirtusLab/formts.git",
  "author": "Miko≈Çaj Klaman <mklaman@virtuslab.com>",
  "license": "MIT",
  "private": true,
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "engines": {
    "node": "12.18.x",
    "yarn": "1.22.x"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "clean:all": "yarn clean && rm -rf ./node_modules",
    "build": "yarn build:commonjs && yarn build:esnext",
    "build:commonjs": "tsc -p ./tsconfig.commonjs.json",
    "build:esnext": "tsc -p ./tsconfig.esnext.json",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
