{
  "version": "0.1.1",
  "name": "@virtuslab/formts",
  "description": "Typescript-focused, schema-based React form library",
  "repository": "git@github.com:VirtusLab/formts.git",
  "author": "Miko≈Çaj Klaman <mklaman@virtuslab.com>",
  "license": "MIT",
  "private": false,
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "engines": {
    "node": "12.18.x",
    "yarn": "1.22.x"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "clean:all": "yarn clean && rm -rf ./node_modules",
    "build": "yarn build:commonjs && yarn build:esnext",
    "build:commonjs": "tsc -p ./tsconfig.commonjs.json",
    "build:esnext": "tsc -p ./tsconfig.esnext.json",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "jest",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "jest --bail --findRelatedTests",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/jest": "~26.0.14",
    "@types/react": "^16.9.50",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "add": "^2.0.6",
    "conditional-type-checks": "^1.0.5",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": ">=4",
    "jest": "~26.4.2",
    "lint-staged": ">=10",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "standard-version": "^9.0.0",
    "ts-jest": "~26.3.0",
    "typescript": "^4.0.2",
    "yarn": "^1.22.5"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
